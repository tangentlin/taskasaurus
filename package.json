{
  "name": "taskasaurus",
  "displayName": "Taskasaurus",
  "version": "1.4.0",
  "description": "A status-bar task launcher strip for repositories with many tasks",
  "categories": [
    "Other"
  ],
  "keywords": [
    "launcher",
    "menu",
    "productivity",
    "status bar",
    "task runner",
    "tasks"
  ],
  "bugs": {
    "url": "https://github.com/tangentlin/taskasaurus/issues"
  },
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/tangentlin/taskasaurus"
  },
  "publisher": "tangent",
  "main": "./dist/extension.js",
  "scripts": {
    "build": "esbuild src/extension.ts --bundle --outfile=dist/extension.js --external:vscode --format=cjs --platform=node --target=node20 --main-fields=module,main",
    "watch": "pnpm run build --sourcemap --watch",
    "check:lint": "oxlint src",
    "check:style": "oxfmt .",
    "format:check": "oxfmt --check .",
    "test": "vitest run",
    "package": "pnpm run build && vsce package --no-dependencies",
    "changelog": "changelogen --no-commit --no-tag"
  },
  "dependencies": {
    "jsonc-parser": "^3.3.1"
  },
  "devDependencies": {
    "@commitlint/cli": "^20.3.1",
    "@commitlint/config-conventional": "^20.3.1",
    "@types/node": "^20.11.0",
    "@types/vscode": "^1.85.0",
    "@vitest/coverage-v8": "^4.0.16",
    "@vscode/vsce": "^3.7.1",
    "changelogen": "^0.6.2",
    "esbuild": "^0.27.2",
    "ovsx": "^0.10.8",
    "oxfmt": "^0.24.0",
    "oxlint": "^1.39.0",
    "typescript": "^5.9.3",
    "vitest": "^4.0.16"
  },
  "contributes": {
    "commands": [
      {
        "command": "taskasaurus.clickNode",
        "title": "Taskasaurus: Click Node"
      },
      {
        "command": "taskasaurus.refresh",
        "title": "Taskasaurus: Refresh Tasks"
      },
      {
        "command": "taskasaurus.collapse",
        "title": "Taskasaurus: Collapse All Groups"
      }
    ],
    "configuration": {
      "title": "Taskasaurus",
      "properties": {
        "taskasaurus.groupDelimiter": {
          "type": "string",
          "default": "/",
          "maxLength": 1,
          "minLength": 1,
          "description": "Character used to separate group names from task names (e.g., with '/', 'Test/unit' belongs to group 'Test').",
          "markdownDescription": "Character used to separate group names from task names.\n\nWith delimiter `/`, a task named `Test/unit` belongs to group `Test`.\n\n**Common delimiters:** `/` (default), `:`, `.`, `|`"
        },
        "taskasaurus.autoCollapseTimeout": {
          "type": "integer",
          "default": 10000,
          "minimum": 0,
          "description": "Time in milliseconds before expanded groups auto-collapse. Set to 0 to disable auto-collapse.",
          "markdownDescription": "Time in milliseconds before expanded groups automatically collapse.\n\n**Default:** `10000` (10 seconds)\n\n**Set to `0`** to disable auto-collapse entirely."
        }
      }
    }
  },
  "activationEvents": [
    "onStartupFinished",
    "workspaceContains:.vscode/tasks.json"
  ],
  "icon": "icon.png",
  "engines": {
    "vscode": "^1.85.0"
  }
}
